extends base.pug

block content
    
      
    form(class='py-4 col-10 col-sm-8 col-md-5 mx-auto shadow p-3 mb-5 rounded border' action=`/data` method='post')
        div(class="col-10 mt-4 mx-auto")
            label(for="systolic" class="font-weight-bold col-10") Systolic:
                input(type="text" class="form-control" name='systolic', id='systolic'  value=` `)
        div(class="col-10 mt-4 mx-auto")        
            label(for='diastolic' class="font-weight-bold col-10") Diastolic:
                input(type="text" class="form-control" name='diastolic' id='diastolic' value=` `)
        div(class="col-10 mt-4 mx-auto")         
            label(for='hr' class="font-weight-bold col-10") Heart Rate:
                input(type="text" class="form-control" id='hr' name="hr",value=` `)
        div(class="col-9 mt-4 mx-auto")
            input(class='btn-primary btn-block col-10' type="submit", name="done")  
    hr
    center
    table
        tr
            td Systolic 
            td Diastolic 
            td Heart Rate 
        for datum in data
            tr.odd(role='row')
                td #{datum.systolic}
                td #{datum.diastolic}
                td #{datum.hr}
