extends base.pug

block content
    div.container    

    form(action="/login" method='post')
        p#legend Login
        label.letter(for='username') Email as Username:
            input#username(type="text", name="username" value="amy@example.com")
        label.letter(for='password') Password:
            input#password(type="password", name="password" value="amyspassword")
        div.asub
            input.submit(type="submit", name="done")   

        
